{% extends '::default/Admin.html.twig' %}

{% block body -%}
    <h1>Liste des categories</h1>

    <table class="table table-bordered">
        <thead>
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('adminCategorie_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nom }}</td>
                <td>
                    <a href="{{ path('adminCategorie_show', { 'id': entity.id }) }}"><i class="icon-book"></i></a>
                    <a href="{{ path('adminCategorie_edit', { 'id': entity.id }) }}"><i class="icon-pencil"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

            <a class="btn btn-primary" href="{{ path('adminCategorie_new') }}">Creer une nouvelle categorie</a>

{% endblock %}
